            "url": {
              "raw": "http://localhost:5002/api/Person",
              "host": ["localhost:5002"],
              "path": ["api", "Person"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"firstName\": \"Ahmet\",\n  \"lastName\": \"YÄ±lmaz\",\n  \"company\": \"Setur\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          }
        },
        {
          "name": "Update Person",
          "request": {
            "method": "PUT",
            "url": {
              "raw": "http://localhost:5002/api/Person/{{personId}}",
              "host": ["localhost:5002"],
              "path": ["api", "Person", "{{personId}}"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"firstName\": \"Updated Name\",\n  \"lastName\": \"Updated Surname\",\n  \"company\": \"Updated Company\"\n}",
