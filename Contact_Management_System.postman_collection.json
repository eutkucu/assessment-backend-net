    {
      "name": "Contact Service",
      "item": [
        {
          "name": "Get All Persons",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://localhost:5002/api/Person",
              "host": ["localhost:5002"],
              "path": ["api", "Person"]
            }
          }
        },
        {
          "name": "Get Person by ID",
