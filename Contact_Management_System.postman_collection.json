              "host": ["localhost:5002"],
              "path": ["api", "Person", "{{personId}}"]
            }
          }
        },
        {
          "name": "Get Person Contact Infos",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://localhost:5002/api/ContactInfo/{{personId}}",
              "host": ["localhost:5002"],
              "path": ["api", "ContactInfo", "{{personId}}"]
            }
